<h1>New Place</h1>
<% if @current_user %>
<%= form_with :model => @place do |form| %>
  <p>
    <%= form.label "name", class: "form-label" %>
    <%= form.text_field "name", class: "form-control" %>
  </p>
  <p>
    <%= form.submit "Create Place", class: "btn btn-success" %>
  </p>
<% end %>
<% else %>
  You must first <a href="/login">login</a> to post.
  <% end %>